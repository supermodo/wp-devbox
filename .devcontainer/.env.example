# WordPress Development Environment Configuration
# Copy this file to .env and customize as needed

# Project Configuration
# PROJECT_NAME=wp-dev
# COMPOSE_PROJECT_NAME=${PROJECT_NAME}

# Database Configuration
WORDPRESS_DB_HOST=db
WORDPRESS_DB_NAME=wordpress
WORDPRESS_DB_USER=wp_user
WORDPRESS_DB_PASSWORD=wp_pass
MYSQL_RANDOM_ROOT_PASSWORD=1
TABLE_PREFIX=wp_

# WordPress Core Settings
WP_DEBUG=1
WP_ENVIRONMENT_TYPE=development
WP_HOME=http://localhost:8080
WP_SITEURL=${WP_HOME}

# Ports
WP_PORT=8080
MAILHOG_PORT=8025

# Development Paths
THEME_SLUG=my-theme
PLUGIN_SLUG=my-plugin

# WP-CLI Setup
SITE_TITLE=Dev Site
ADMIN_USER=admin
ADMIN_PASSWORD=password
ADMIN_EMAIL=admin@localhost.com
WP_PLUGINS=advanced-custom-fields
WP_RESET=false

# WordPress Security Keys (generate new ones for production)
AUTH_KEY=change-me-AUTH_KEY
SECURE_AUTH_KEY=change-me-SECURE_AUTH_KEY
LOGGED_IN_KEY=change-me-LOGGED_IN_KEY
NONCE_KEY=change-me-NONCE_KEY
AUTH_SALT=change-me-AUTH_SALT
SECURE_AUTH_SALT=change-me-SECURE_AUTH_SALT
LOGGED_IN_SALT=change-me-LOGGED_IN_SALT
NONCE_SALT=change-me-NONCE_SALT
